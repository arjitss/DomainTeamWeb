@model DomainTeamWebsite.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "New Ninja in Team ...!";
}
<form asp-controller="Home" asp-action="CreateView" method="POST" class="mt-3">
<div class="form-group row">
    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Name" class="form-control" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
        <input asp-for="Email" class="form-control" placeholder="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
</div>

<div class="form-group row">
    <label asp-for="CoreSkills" class="col-sm-2 col-form-label"> </label>
    <div class="col-sm-10">
        <input asp-for="CoreSkills" class = "form-control" placeholder="CoreSkills"/>
                <span asp-validation-for="CoreSkills" class="text-danger"></span>
    </div>
</div>
<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group row">
    <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</div>
</form>